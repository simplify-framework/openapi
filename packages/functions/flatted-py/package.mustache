{
    "name": "{{serviceNameSnake}}",
    "version": "{{appVersion}}",
    "description": "{{{appDescription}}}",
    "main": "index.py",
    "scripts": {
        "push-update": "node function-push.js --ops update",
        "push-code": "env FUNCTION_SOURCE=src node function-push.js",
        "push-layer": "env LAYER_SOURCE=layer node layer-push.js",
        "build-code": "cd src/ && pip3 install -r requirements.txt",
        "build-layer": "mkdir -p layer/python && file={{serviceNameSnake}} && cp src/${file}.py layer/python/${file//-/_}.py",
        "code-scan": "bash sonarqube-scanner.sh",
        "start": "python index.py"
    },
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "simplify-sdk": "^0.1.10"
    }
}
